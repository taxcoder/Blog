{
  "files": [],
  "include": ["src/**/*.ts", "types/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "style.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 是否不生成打包后的 JavaScript 文件
    "noEmit": true,
    // 是否移除编译后的 JavaScript 文件的注释
    "removeComments": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}